<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
        
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd         
                           http://camel.apache.org/schema/spring 
                           http://camel.apache.org/schema/spring/camel-spring.xsd          
                           http://camel.apache.org/schema/cxf 
                           http://camel.apache.org/schema/cxf/camel-cxf.xsd" >  
    
    <camelContext id="_idFlujoCamelContext" streamCache="true" xmlns="http://camel.apache.org/schema/spring" >
    
        <propertyPlaceholder id="_idPlaceholder" location="classpath:application.properties" />
         
		<dataFormats>    
		    <xmljson id="idXmlToJson" 
		             forceTopLevelObject="true" 
		             trimSpaces="true" 
		             rootName="newRoot" 
		             skipNamespaces="true" 
		             removeNamespacePrefixes="true" 
		             expandableProperties="d e" /> 
		</dataFormats>
 
        <route id="_idFlujoCamelRoute" > 
 
            <from id="_Timer_001" uri="{{ws.input.component}}" /> 
            <log id="_Log_001" message="ANTES... \n ${body}" /> 
               
            <doTry id="_idDoTry_01" > 
             
                <!-- EXAMPLE #1 [XML ==> JSON]:  
				<marshal ref="idXmlToJson" /> 			 
                -->
                   
                <!-- EXAMPLE #2 [JSON ==> XML]: --> 
		        <unmarshal ref="idXmlToJson" />
		        
		        
		        <log id="_Log_002" message="DESPUES... \n ${body}" /> 
		        <to uri="file:OUTPUT" />
 
                <doCatch id="_idDoCatch_01" >
                    <exception>java.lang.Exception</exception>  
                    
                    <handled>
                       <constant>true</constant>
                    </handled>
                    
                    <setBody id="_idSetBody_02" >  
                        <simple>${exception.getResponseBody}</simple>
                    </setBody>
                    
                    <log id="_Log_003" message="Exception: \n ${body}" />    
                </doCatch>
            </doTry>
            
        </route>
        
    </camelContext>
 
</beans>

